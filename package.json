{
  "name": "bun-js-algo",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "bun-types": "latest"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "watch": "bun run --watch src/index.ts",
    "hotwatch": "bun run --hot src/index.ts",
    "start:backend": "bun run --watch src/backend/index.ts",
    "build:frontend": "bun --minify build src/frontend/index.ts --outdir www/js",
    "dev:frontend": "bun --minify build src/frontend/index.ts --outdir www/js --watch"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "figlet": "^1.6.0"
  }
}